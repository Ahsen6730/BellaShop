@model IEnumerable<Bella.Models.Urun>
@{
   ViewBag.Title = "Index";
}
@if (Model != null)
{

    <section class="page-section breadcrumbs">
        <div class="container">
            <div class="page-header">
                <h1>
                    Kategori Sayfası
                </h1>
            </div>

        </div>
    </section>
    <!-- /BREADCRUMBS -->
    <!-- PAGE WITH SIDEBAR -->
