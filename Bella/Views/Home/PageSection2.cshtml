@model IEnumerable<Bella.Models.CokSatan>

@{
    Layout = null;
}


@if (Model != null)
{

    <section class="page-section">
        <div class="container">

            <div class="tabs">
                <ul id="tabs" class="nav nav-justified-off">
                    <!--
                    -->

                    <li class=""><a href="#tab-1" data-toggle="tab">Öne Çıkan</a></li>
                    <!--
                    -->
                    <li class="active"><a href="#tab-2" data-toggle="tab"> En Yeni</a></li>
                    <!--
                    -->
                    <li class=""><a href="#tab-3" data-toggle="tab"> Çok Satanlar </a></li>
                </ul>
            </div>

            <div class="tab-content">


                <div class="tab-pane fade active in" id="tab-2">
                    <div class="row">

                        @foreach (var item in Model)
                        {
                            <div class="col-md-3 col-sm-6">
                                <div class="thumbnail no-border no-padding">
                                    <div class="media">
                                        <a class="media-link" data-gal="prettyPhoto" href="../assets/img/preview/shop/product-1-big.jpg">
                                            <img src="..@item.Urun.Resim" alt="" />
                                            <span class="icon-view"><strong><i class="fa fa-eye"></i></strong></span>
                                        </a>
                                    </div>

                                    <div class="caption text-center">
                                        <h4 class="caption-title"><a href="product-details.html">@item.Urun.UrunAdi</a></h4>
                                        <div class="rating">
                                            <span class="star"></span>
                                            <!--
                                            -->
                                            <span class="star active"></span>
                                            <!--
                                            -->
                                            <span class="star active"></span>
                                            <!--
                                            -->
                                            <span class="star active"></span>
                                            <!--
                                            -->
                                            <span class="star active"></span>
                                        </div>

                                        <div class="price"><ins>&#8378;@item.Urun.UrunFİyatları.OrderByDescending(b => b.ID).FirstOrDefault().Fiyat</ins> <del>&#8378;425.00</del></div>
                                        <div class="buttons" id="mdlProjeForm">
                                            <a class="btn btn-theme btn-theme-transparent btn-wish-list" href="#"><i class="fa fa-heart"></i></a>
                                            <!--
                                            -->
                                            <form id="frmProje" action="/Home/SepetEkle" method="post">
                                                <a class="btn btn-theme btn-theme-transparent btn-icon-left" onclick="SepeteEkle(@item.Urun.ID)" id="btnProjeDuzenle"><i class="fa fa-shopping-cart"></i>Sepete ekle</a>
                                                <!--
                                                -->
                                            </form>

                                            <a class="btn btn-theme btn-theme-transparent btn-compare" href="#"><i class="fa fa-exchange"></i></a>

                                        </div>


                                    </div>
                                </div>
                            </div>

                        }


                    </div>
                </div>

                <!-- tab 3 -->


            </div>


        </div>
    </section>


}

