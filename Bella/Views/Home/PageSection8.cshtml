@model IEnumerable<Bella.Models.Uyari>
@{
    Layout = null;
}
@if (Model != null)
{
    <section class="page-section no-padding-top">
        <div class="container">
            <div class="row blocks shop-info-banners">
                @foreach (var item in Model)
                {<div class="col-md-4">
                        <div class="block">
                            <div class="media">
                                <div class="pull-right"><i class="@item.UyariIkon"></i></div>
                                <div class="media-body">
                                    <h4 class="media-heading">
                                        @item.UyariBaslik
                                    </h4>
                                    @item.UyariYazi
                                </div>

                            </div>
                        </div>
                    </div>


                }
            </div>
            </div>
      </section>  
    }

